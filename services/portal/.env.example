# Server Configuration
PORT=8080
ENV=development

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CREDENTIALS_PATH=./firebase-credentials.json
FIRESTORE_DATABASE=(default)

# Firebase Emulator Configuration (for local dev)
USE_FIREBASE_EMULATOR=false               # Enable Firebase emulators (auth + firestore)
FIREBASE_AUTH_EMULATOR_HOST=localhost:9099
FIRESTORE_EMULATOR_HOST=localhost:8080

# GitHub Configuration
GITHUB_ORG=jredh-dev
GITHUB_TOKEN=ghp_your_github_personal_access_token

# Slack Configuration
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Authentication Configuration
SESSION_COOKIE_MAX_AGE=3600           # Session duration in seconds (default: 1 hour)
REMEMBER_ME_MAX_AGE=604800            # "Remember me" duration in seconds (default: 1 week)
REQUIRE_EMAIL_VERIFICATION=true       # Require email verification before login
MOCK_VERIFICATION_MODE=true           # Use mock email/SMS (true for dev, false for prod)
INVITE_EXPIRATION_DAYS=7              # Invitation link expiration in days
VERIFICATION_EXPIRATION_HOURS=24      # Email verification link expiration in hours
SMS_EXPIRATION_MINUTES=10             # SMS verification code expiration in minutes
SMS_MAX_ATTEMPTS=3                    # Maximum SMS verification attempts
